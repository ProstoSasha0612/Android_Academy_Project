<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--Detail Activity-->
    <style name="main_film_name_text">
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#ECECEC</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="text_13_plus">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="back_arrow_image">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">59dp</item>
    </style>

    <style name="back_arrow_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">56dp</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="film_name_detail_activity">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">0sp</item>
        <item name="android:textAppearance">@style/main_film_name_text</item>
    </style>

    <style name="age_plus_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textAppearance">@style/text_13_plus</item>
        <item name="android:fontFamily">@font/roboto_black</item>
    </style>

    <style name="movie_details_genre">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/pink_dark</item>
    </style>

    <style name="rating_star">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="reviews_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textColor">@color/grey</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <style name="storyline_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">20dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/changed_white</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <style name="description_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:alpha">0.75</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:lineSpacingExtra">4sp</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="cast_textview">
        <item name="android:textColor">@color/changed_white</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">8sp</item>
        <item name="android:textSize">@dimen/normal_text</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:shadowColor">@color/shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
    </style>

    <style name="cast_actor">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">80dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">7dp</item>
        <item name="fontFamily">@font/roboto_black</item>
    </style>

    <style name="actor_name_textview">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">2sp</item>
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/actors_name_color</item>
        <item name="android:layout_marginTop">6dp</item>
        <item name="fontFamily">@font/roboto_black</item>
        <item name="android:textAlignment">textStart</item>
    </style>

    <!--film_poster_item-->
    <style name="genre_poster">
        <item name="android:layout_width">146dp</item>
        <item name="android:layout_height">12dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">22dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:textColor">@color/pink_dark</item>
        <item name="android:textSize">8sp</item>
        <item name="fontFamily">@font/roboto_light</item>
    </style>

    <style name="rating_star_film_poster">
        <item name="android:layout_width">8dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_marginTop">4dp</item>
    </style>
</resources>